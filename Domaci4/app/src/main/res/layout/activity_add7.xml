<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

    <FrameLayout
            android:id="@+id/map_add"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>



    <EditText
            android:id="@+id/add_activity_lokacija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="lokacija"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"



    />

    <TextView
            android:id="@+id/add_activity_datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:ellipsize="end"
            android:hint="datum"
    />




    <EditText
            android:id="@+id/add_activity_opis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="opis"
            android:layout_marginTop="15dp"

            android:layout_marginLeft="30dp"




    />

<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
            android:text="STORE"
            android:id="@+id/add_activity_store"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

    />

    <Button
            android:id="@+id/add_activity_exit"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"

    />




</LinearLayout>


</LinearLayout>